datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  name      String?
  role      String  @default("customer") // admin, seller, customer
  createdAt DateTime @default(now())
  orders    Order[]
}

model Product {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  price       Float
  currency    String  @default("USD")
  image       String?
  category    String?
  createdAt   DateTime @default(now())
}

model Order {
  id        Int     @id @default(autoincrement())
  userId    Int
  total     Float
  status    String  @default("pending")
  createdAt DateTime @default(now())
  items     Json
  user      User    @relation(fields: [userId], references: [id])
}

model Payment {
  id        String  @id
  method    String
  currency  String
  amount    Float
  status    String
  createdAt DateTime @default(now())
}
